alias showhack {
  if ([$1@$2]!=[<UNKNOWN>@<UNKNOWN>]) {
    /xecho -level snote [HACK] $3 <$0!$1@$2> $4-
  } {
    /xecho -level snote [HACK] $3 <$0> $4-]
  }
}

alias windows {
  if ([$WINDOWS]==[OFF]) {
    ^assign WINDOWS ON
    ^window new name MsgView
#   ^window shrink 6
    ^window level msg
    ^set hold_mode off
#   //mode $N +sw
    ^window goto 2
#   ^window new name Other
#   ^window level public
#   ^set hold_mode off
#   ^window shrink 2
#   ^window level all
#   ^window goto 3
#   ^window goto 2
    ^on ^server_notice "% % no% -- hack: *" Userhost $$5 -cmd showhack $$$$0 $$$$3 $$$$4 $$4 $$6-
  }
}


#!/bin/bash

# $Id$	

# Save debugging output by display, its often useful.
exec > $HOME/.Xsessionlog/$DISPLAY 2>&1
set -x

# debugging info
date
env
xset q

# initial set-up

# disable the screensaver
xset s noblank

# swap the ctrl-capslock keys
if [ -f $HOME/.Xmodmap ]; then
  xmodmap $HOME/.Xmodmap
fi

if [ -f $HOME/.nokde ]; then
  xscreensaver-command -exit
  blacken-cmap -loop &
  xsetroot -cursor $HOME/.icons/hobbes.icon $HOME/.icons/hobbesmask.icon &
  xdaliclock -transparent -noseconds -geometry -375-0 &
  tkpostage -detailFont 8x16 -numberFont 10x20 -geometry -250-20 &
  xosview -geometry +10-10 &
  rxvt -fn 6x10 -geometry 80x10-10-110 -e swatch -t /var/log/swatch &
  perl -e '$fg=rand 2**24; do { $bg = rand 2**24 } while (unpack("%32b*", pack "N", ($bg^$fg)&0xe0e0e0) < 8); ($fg, $bg) = map { sprintf "#%06x", $_ } $fg, $bg; exec("rxvt", "-fg", $fg, "-bg", $bg, "-fn", "8x16", "-geometry", "+10+15");' &
  nice -n 20 xscreensaver -install -cycle 2 -timeout 5 &
  xset m 3 8
  xearth -ncolors 12 -label -labelpos +0+0 -bigstars 20 -night 15 -font lucidasans-bold-18 -pos random -nice 10 -fork
else
  exec startkde
fi
